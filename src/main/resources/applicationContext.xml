<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Remove constretto-specific configuration -->
    <!-- <constretto:configuration>...</constretto:configuration> -->

    <!-- Add Spring property placeholder configuration -->
    <!-- Configure property placeholders with proper precedence -->
    <context:property-placeholder
            location="classpath:useradminservice.properties,
                        file:./useradminservice_override.properties,
                        classpath:test-useradminservice.properties"
            ignore-resource-not-found="true"
            ignore-unresolvable="true"
            order="1"/>

    <context:component-scan base-package="net.whydah.admin"/>
    <bean id="objectMapper" class="com.fasterxml.jackson.databind.ObjectMapper"/>
</beans>